<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.appdever.foody.Login2Activity"
    android:background="#f7751e">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="@dimen/login_page"
            android:layout_height="@dimen/textFieldHeight"
            android:id="@+id/editText"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:background="#71fafff8"
            android:hint="ชื่อผู้ใช้" />

        <EditText
            android:layout_width="@dimen/login_page"
            android:layout_height="@dimen/textFieldHeight"
            android:id="@+id/editText2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13dp"
            android:background="#71fafff8"
            android:hint="รหัสผ่าน" />

        <Button
            android:layout_width="@dimen/login_page"
            android:layout_height="wrap_content"
            android:text="เข้าสู่ระบบ"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="#747676" />
    </LinearLayout>
</RelativeLayout>
