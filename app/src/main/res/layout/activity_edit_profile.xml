<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="แก้ไขโปรไฟล์"
            android:textSize="20dp"
            android:layout_gravity="center"
            />
    </android.support.v7.widget.Toolbar>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.appdever.foody.signupActivity"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/addImageButton"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/addpicturesignup"
            android:layout_marginTop="24dp" />

        <EditText
            android:layout_width="@dimen/textFieldWidthSignUp"
            android:layout_height="@dimen/textFieldHeightSignUp"
            android:id="@+id/oldPassTextField"
            android:layout_gravity="center_horizontal"
            android:background="#41303030"
            android:autoText="true"
            android:layout_marginTop="52dp"
            android:hint="รหัสผ่านเก่า" />

        <EditText
            android:layout_width="@dimen/textFieldWidthSignUp"
            android:layout_height="@dimen/textFieldHeightSignUp"
            android:id="@+id/newPassTextField"
            android:layout_gravity="center_horizontal"
            android:background="#41303030"
            android:autoText="true"
            android:layout_marginTop="37dp"
            android:hint="รหัสผ่านใหม่" />

        <EditText
            android:layout_width="@dimen/textFieldWidthSignUp"
            android:layout_height="@dimen/textFieldHeightSignUp"
            android:id="@+id/verifyNewPassTextField"
            android:layout_gravity="center_horizontal"
            android:background="#41303030"
            android:autoText="true"
            android:layout_marginTop="37dp"
            android:hint="ยืนยันรหัสใหม่" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:padding="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/textFieldHeightSignUp"
                android:text="ยกเลิก"
                android:id="@+id/cancelButton"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="#747676"
                android:layout_marginRight="10dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/textFieldHeightSignUp"
                android:text="ตกลง"
                android:id="@+id/okButton"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="#f7751e"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
</LinearLayout>