<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cardview_light_background"
    tools:context="com.appdever.foody.FoodDetailActivity"
    android:orientation="vertical"

    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_scrollFlags="snap|enterAlways"
        android:textAlignment="center">
        <LinearLayout
            android:id="@+id/enter_search_topbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal"
            android:animateLayoutChanges="true">

            <TextView
                android:id="@+id/txtPageName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/food_detail_activity"
                android:gravity="center"
                android:textColor="@color/colorFontTitle"
                android:textSize="@dimen/text_big"
                fontPath="fonts/ThaiSansNeue-Bold.ttf"
                android:layout_weight="1"
                tools:ignore="MissingPrefix" />


        </LinearLayout>
    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="?actionBarSize"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="@dimen/margin_from_top"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:id="@+id/imgFood"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/nameFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgFood"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:textColor="#000000"
        />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameFood"
        android:id="@+id/about"
        android:text="เกี่ยวกับ"
        android:textSize="@dimen/font_size_x4"
        android:paddingTop="@dimen/space_x2"
        android:textColor="#000000"
        />

    <View
        android:id="@+id/line_nameFood"
        android:layout_below="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/foodDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_nameFood"
        android:scrollbars="vertical"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting
industry. Lorem Ipsum has been the industry's standard dummy text ever since the
1500s, when an unknown printer took a galley of type and scrambled it to make a type
specimen book."
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
        android:maxLines = "3"
        android:textColor="#000000"

        ></android.support.v7.widget.AppCompatTextView>




    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodDescription"
        android:id="@+id/ingredient"
        android:text="วัตถุดิบ"
        android:textSize="@dimen/font_size_x4"
        android:paddingTop="@dimen/space_x2"
        android:textColor="#000000"
        />

    <View
        android:id="@+id/line_ingredient"
        android:layout_below="@+id/ingredient"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/prepareIngredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_ingredient"
        android:scrollbars="vertical"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting
industry. Lorem Ipsum has been the industry's standard dummy text ever since the
1500s, when an unknown printer took a galley of type and scrambled it to make a type
specimen book. It has survived not only five centuries, but also the leap into electronic
typesetting, remaining essentially unchanged. It was popularised in the 1960s with the
release of Letraset sheets containing Lorem Ipsum passages, and more recently with
desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum."
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
        android:maxLines = "4"
        android:textColor="#000000"

        ></android.support.v7.widget.AppCompatTextView>


    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prepareIngredient"
        android:id="@+id/cooking"
        android:text="วิธีทำ"
        android:textSize="@dimen/font_size_x4"
        android:paddingTop="@dimen/space_x2"
        android:textColor="#000000"
        />

    <View
        android:id="@+id/line_cooking"
        android:layout_below="@+id/cooking"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/cookingMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_cooking"
        android:scrollbars="vertical"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting
industry. Lorem Ipsum has been the industry's standard dummy text ever since the
1500s, when an unknown printer took a galley of type and scrambled it to make a type
specimen book. It has survived not only five centuries, but also the leap into electronic
typesetting, remaining essentially unchanged. It was popularised in the 1960s with the
release of Letraset sheets containing Lorem Ipsum passages, and more recently with
desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum."
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
        android:maxLines = "6"
        android:textColor="#000000"

        ></android.support.v7.widget.AppCompatTextView>



    </LinearLayout>
</RelativeLayout>