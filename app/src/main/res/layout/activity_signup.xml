<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="สมัครสมาชิก"
            android:textSize="20dp"
            android:layout_gravity="center"
            />
    </android.support.v7.widget.Toolbar>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.appdever.foody.signupActivity"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Space
            android:layout_width="20px"
            android:layout_height="0dp"
            android:layout_weight="10" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40">

            <Space
                android:layout_width="0dp"
                android:layout_height="20px"
                android:layout_weight="19" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/addImageButton"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/addpicture2"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:layout_weight="30" />

            <Space
                android:layout_width="0dp"
                android:layout_height="20px"
                android:layout_weight="19" />
        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="0dp"
            android:layout_weight="10" />

        <EditText
            android:layout_width="@dimen/textFieldWidthSignUp"
            android:layout_height="0dp"
            android:id="@+id/usernameTextField"
            android:layout_gravity="center_horizontal"
            android:background="#41303030"
            android:autoText="true"
            android:hint=" ชื่อผู้ใช้ (a-Z,0-1 ความยาวไม่เกิน 15)"
            android:layout_weight="10" />



      <!--  <Space
            android:layout_width="20px"
            android:layout_height="0dp"
            android:layout_weight="6" />-->

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_gravity="center_horizontal"
            android:id="@+id/alertUser"
            />

        <EditText
            android:layout_width="@dimen/textFieldWidthSignUp"
            android:layout_height="0dp"
            android:id="@+id/emailTextField"
            android:layout_gravity="center_horizontal"
            android:background="#41303030"
            android:autoText="true"
            android:hint=" อีเมล"
            android:layout_weight="10" />

        <!--<Space
            android:layout_width="20px"
            android:layout_height="0dp"
            android:layout_weight="6" />-->

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_gravity="center_horizontal"
            android:text="Small Text"
            android:id="@+id/alertEmail" />

        <!--<TextView
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/textView3" />-->

        <EditText
            android:layout_width="@dimen/textFieldWidthSignUp"
            android:layout_height="0dp"
            android:id="@+id/passwordTextField"
            android:layout_gravity="center_horizontal"
            android:background="#41303030"
            android:autoText="true"
            android:hint=" รหัสผ่าน (a-Z,0-1 ความยาว 6-15)"
            android:layout_weight="10"
            android:password="true" />

       <!-- <Space
            android:layout_width="20px"
            android:layout_height="0dp"
            android:layout_weight="6" />-->

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_gravity="center_horizontal"
            android:text="Small Text"
            android:id="@+id/alertPass" />

        <EditText
            android:layout_width="@dimen/textFieldWidthSignUp"
            android:layout_height="0dp"
            android:id="@+id/verifyPassTextField"
            android:layout_gravity="center_horizontal"
            android:background="#41303030"
            android:autoText="true"
            android:hint=" ยืนยันรหัสผ่าน"
            android:layout_weight="10"
            android:password="true" />

       <!-- <Space
            android:layout_width="20px"
            android:layout_height="0dp"
            android:layout_weight="10" />-->

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_gravity="center_horizontal"
            android:text="Small Text"
            android:id="@+id/alertRepass" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="275dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="10">



            <Button
                android:layout_width="0dp"
                android:layout_height="@dimen/textFieldHeightSignUp"
                android:text="ยกเลิก"
                android:id="@+id/cancelButton"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:background="#747676" />

            <Space
                android:layout_width="0dp"
                android:layout_height="20px"
                android:layout_weight="7" />

            <Button
                android:layout_width="0dp"
                android:layout_height="@dimen/textFieldHeightSignUp"
                android:text="ตกลง"
                android:id="@+id/okButton"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:background="#f7751e" />
        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="0dp"
            android:layout_weight="10" />
    </LinearLayout>
</RelativeLayout>
</LinearLayout>